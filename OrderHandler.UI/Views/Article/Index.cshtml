@model OrderHandler.UI.Models.ArticleViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Articles</h1>

<form asp-controller="Article" asp-action="CreateSearchString">
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderRow[0].ArticleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderRow[0].OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderRow[0].ArticleAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderRow[0].ArticleNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderRow[0].Price)
            </th>
            <th>
                <b>Order Sum</b>
            </th>
            <th>
                OrderRows Found:  @Html.DisplayFor(model => model.OrderRowsFound)
            </th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model.OrderRow)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderSum) SEK
            </td>
        </tr>
            }

    </tbody>
</table>
