@model IQueryable<OrderHandler.UI.Models.OrderRowViewModel>
@using NonFactors.Mvc.Grid; 

@{
    ViewData["Title"] = "Index";
}

<style>
    .order-section {
        display: block;
    }

    table {
        margin-top: 20px;
    }

    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
    }

    th {
        text-align: left;
    }
</style>

<h1>Articles</h1>
@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.OrderId).Titled("Name");
        columns.Add(model => model.CustomerName).Titled("Surname");
    })
    .Using(GridFilterMode.Header)
    .Empty("No data found")
    .Filterable()
    .Sortable()
    .Pageable()
)

