@model OrderHandler.UI.Models.OrderViewModel1

@{
    ViewData["Title"] = "Details";
}

<style>
    .order-section{
        display: block;
    }
    table {
        margin-top: 20px;
    }
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
    }

    th {
        text-align: left;
    }
</style>
<div>
    <dl class="row">
        <div class="order-section">
            <h4>Order: @Html.DisplayFor(model => model.Id)<b></b></h4>
            <h4>Customer: @Html.DisplayFor(model => model.CustomerName)<b></b></h4>
        </div>
        <table style="width:100%">
            <tr>
                <th><b>Article Namn</b></th>
                <th><b>Pris</b></th>
                <th><b>Arikel NR:</b></th>
                <th><b>Antal:</b></th>
            </tr>
            @foreach (var order in Model.OrderRow)
            {
        <tr>
            <td>@order.ArticleName</td>
            <td>@order.Price SEK</td>
            <td>@order.ArticleNumber</td>
            <td>@order.ArticleAmount</td>
        </tr>
            }
        </table>
    </dl>
</div>
<div>
    @Html.ActionLink("Ändra", "Edit", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Lägg till orderrad", "CreateOrderRow", new { orderId = Model.Id }) |
    <a asp-action="Index">Tillbaka</a>
</div>
